    </div>

    <script>
        let selectedSensorType = ''; // HART, MODBUS, or ANALOG
        let instructionStep = 0;
        let returningForNextStep = false; // Track when returning to menu/setup for next config step
        let allowedButton = null; // Which button is allowed in guide mode (null = all allowed)

        function startSetup(sensorType) {
            selectedSensorType = sensorType;
            instructionStep = 0;
            
            // Hide header/logo
            const headerContainer = document.querySelector('.header-container');
            if(headerContainer) {
                headerContainer.style.display = 'none';
            }
            
            // Hide home page, show device
            document.getElementById('home-page').classList.add('hidden');
            document.querySelector('.device-wrapper').classList.remove('hidden');
            document.getElementById('device-container').classList.remove('hidden');
            
            // Hide all screens first
            document.querySelectorAll('[id$="-screen"]').forEach(screen => {
                screen.style.display = 'none';
            });
            
            // Start with sensor screen (screen 1)
            currentScreen = 1;
            document.getElementById('sensor-screen').style.display = 'block';
            guideMode = true;
            
            // Show first instruction
            showInstruction(
                "Step 1: Open Menu",
                `Press OK to open the menu`,
                'ok-btn'
            );
        }

        function showInstruction(title, text, blinkButton = null) {
            const overlay = document.getElementById('instruction-overlay');
            const instructionTitle = document.getElementById('instruction-title');
            const instructionText = document.getElementById('instruction-text');
            const explanationBox = document.getElementById('vessel-explanation-box');
            
            // Check if this is Step 9 with the long explanation
            const isStep9 = title === "Step 9: Configure Vessel Height" && text.includes('VESSEL HEIGHT EXPLANATION');
            // Check if we're on desktop (width >= 769px)
            const isDesktop = window.innerWidth >= 769;
            
            // Store original text BEFORE any modifications
            const originalText = text;
            
            if (isStep9) {
                // Step 9: Show full text together on both mobile and desktop
                if (isDesktop) {
                    overlay.classList.add('vessel-height-step');
                } else {
                    overlay.classList.remove('vessel-height-step');
                }
                
                instructionTitle.textContent = title;
                // Show the full original text including the explanation - KEEP IT ALL TOGETHER
                // Convert line breaks to HTML breaks for proper display
                let displayText = originalText;
                displayText = displayText.replace(/\r\n/g, '\n').replace(/\r/g, '\n'); // Normalize line endings
                displayText = displayText.replace(/\n/g, '<br>');
                instructionText.innerHTML = displayText;
                
                // Hide explanation box - we're showing everything together in the overlay
                if (explanationBox) {
                    explanationBox.style.display = 'none';
                    explanationBox.style.position = '';
                    explanationBox.style.left = '';
                    explanationBox.style.top = '';
                    explanationBox.style.transform = '';
                }
            } else {
                // Non-Step-9: Show full text for both mobile and desktop
                overlay.classList.remove('vessel-height-step');
                instructionTitle.textContent = title;
                instructionText.textContent = originalText;
                
                // Hide explanation box for other steps
                if (explanationBox) {
                    explanationBox.style.display = 'none';
                    explanationBox.style.position = '';
                    explanationBox.style.left = '';
                    explanationBox.style.top = '';
                    explanationBox.style.transform = '';
                }
            }
            
            overlay.classList.add('active');
            
            // Stop all button blinking first
            document.querySelectorAll('.button').forEach(btn => {
                btn.classList.remove('blink');
            });
            
            // Handle multiple buttons or single button
            if (blinkButton) {
                if (blinkButton.includes(',')) {
                    // Multiple buttons allowed (comma-separated)
                    const buttons = blinkButton.split(',');
                    buttons.forEach(btnId => {
                        const btn = document.getElementById(btnId.trim());
                        if (btn) btn.classList.add('blink');
                    });
                    allowedButton = buttons.map(b => b.trim()); // Array of allowed buttons
                } else {
                    // Single button
                    const btn = document.getElementById(blinkButton);
                    if (btn) btn.classList.add('blink');
                    allowedButton = blinkButton; // Lock to this button
                }
            } else {
                allowedButton = null; // Allow all buttons
            }
        }

        function clearInstruction() {
            const overlay = document.getElementById('instruction-overlay');
            const explanationBox = document.getElementById('vessel-explanation-box');
            overlay.classList.remove('active');
            overlay.classList.remove('vessel-height-step');
            
            // Hide explanation box
            if (explanationBox) {
                explanationBox.style.display = 'none';
            }
            
            // Stop all button blinking
            document.querySelectorAll('.button').forEach(btn => {
                btn.classList.remove('blink');
            });
            
            allowedButton = null; // Allow all buttons
        }

        function getVesselHeightValue() {
            const valueString = vesselHeight.join('').substring(0, 3) + '.' + vesselHeight.join('').substring(3);
            return parseFloat(valueString).toFixed(2);
        }

        function generateRandomLines(count) {
            const lines = [];
            for (let i = 0; i < count; i++) {
                let top, left;
                // Avoid center area where "Sensor Configured" text is (approximately 30-50% from top, 30-70% from left)
                do {
                    top = Math.random() * 100;
                    left = Math.random() * 100;
                } while (top >= 25 && top <= 55 && left >= 25 && left <= 75);
                
                lines.push({
                    id: i,
                    top: `${top}%`,
                    left: `${left}%`,
                    animationDelay: `${Math.random() * 2}s`,
                    rotation: `${Math.random() * 360}deg`,
                    scale: `${0.5 + Math.random() * 0.5}`
                });
            }
            return lines;
        }

        function showSuccess(sensorType) {
            // Hide instruction overlay
            clearInstruction();
            
            // Generate and add scattered background lines
            const scatteredLinesContainer = document.getElementById('scattered-lines');
            if (scatteredLinesContainer) {
                scatteredLinesContainer.innerHTML = ''; // Clear any existing lines
                const backgroundLines = generateRandomLines(30);
                
                backgroundLines.forEach(line => {
                    const lineElement = document.createElement('div');
                    lineElement.className = 'background-line-ray';
                    lineElement.style.top = line.top;
                    lineElement.style.left = line.left;
                    lineElement.style.animationDelay = line.animationDelay;
                    lineElement.style.transform = `translate(-50%, -50%) rotate(${line.rotation}) scaleX(${line.scale})`;
                    scatteredLinesContainer.appendChild(lineElement);
                });
            }
            
            // Build summary based on sensor type
            let summaryLines = [];
            
            // Get medium type - show "Solid" for "Bulk solid", otherwise show as-is
            const mediumType = mediumItems[mediumIndex] === 'Bulk solid' ? 'Solid' : mediumItems[mediumIndex];
            
            // Get vessel height
            const vesselValue = getVesselHeightValue();
            
            if (sensorType === 'MODBUS') {
                summaryLines = [
                    `1. Configure Type of Medium: ${mediumType}`,
                    `2. Configure Vessel Height: ${vesselValue} Feet`,
                    '3. Complete!'
                ];
            } else if (sensorType === 'ANALOG') {
                summaryLines = [
                    `1. Configure Type of Medium: ${mediumType}`,
                    `2. Configure Vessel Height: ${vesselValue} Feet`,
                    '3. Configure Distance A',
                    '4. Configure Distance B',
                    '5. Complete!'
                ];
            } else if (sensorType === 'HART') {
                const hartValue = hartAddress[0] * 10 + hartAddress[1];
                summaryLines = [
                    `1. Configure Type of Medium: ${mediumType}`,
                    `2. Configure Vessel Height: ${vesselValue} Feet`,
                    `3. Configure HART Address: ${hartValue}`,
                    '4. Complete!'
                ];
            }
            
            const summaryContainer = document.getElementById('success-summary');
            if(summaryContainer) {
                summaryContainer.innerHTML = summaryLines.map(line => `<div>${line}</div>`).join('');
            }
            
            const overlay = document.getElementById('success-overlay');
            if(overlay) {
                // Smoothly fade in the container
                overlay.style.display = 'block';
                setTimeout(() => {
                    overlay.classList.add('show');
                }, 10);
                
                // Reset animations by removing and re-adding
                const checkmarkCircle = overlay.querySelector('.checkmark-circle');
                const checkmarkPath = overlay.querySelector('.checkmark-path');
                const headline = overlay.querySelector('.headline');
                const subhead = overlay.querySelector('.subhead');
                const recapCard = overlay.querySelector('.recap-card');
                const bindiscWrapper = overlay.querySelector('.bindisc-wrapper');
                
                if(checkmarkCircle) {
                    checkmarkCircle.style.animation = 'none';
                    void checkmarkCircle.offsetWidth;
                    checkmarkCircle.style.animation = 'checkmark-draw 0.5s linear forwards';
                }
                if(checkmarkPath) {
                    checkmarkPath.style.animation = 'none';
                    void checkmarkPath.offsetWidth;
                    checkmarkPath.style.animation = 'checkmark-draw 0.5s linear 0.3s forwards';
                }
                if(headline) {
                    headline.style.animation = 'none';
                    void headline.offsetWidth;
                    headline.style.animation = 'headline-fade-in 0.4s ease-out 0.8s forwards';
                }
                if(subhead) {
                    subhead.style.animation = 'none';
                    void subhead.offsetWidth;
                    subhead.style.animation = 'headline-fade-in 0.4s ease-out 1s forwards';
                }
                if(bindiscWrapper) {
                    bindiscWrapper.style.animation = 'none';
                    void bindiscWrapper.offsetWidth;
                    bindiscWrapper.style.animation = 'fadeInScale 0.8s ease-out 0.4s forwards';
                }
                if(recapCard) {
                    recapCard.style.animation = 'none';
                    void recapCard.offsetWidth;
                    recapCard.style.animation = 'slide-up 0.6s cubic-bezier(0.19, 1, 0.22, 1) 1.2s forwards';
                }
            }
        }

        function isDeviceLocked() {
            return document.getElementById('device-container').classList.contains('locked');
        }

        function lockDevice() {
            const device = document.getElementById('device-container');
            const recapBtn = document.getElementById('recap-demo-btn');
            device.classList.add('locked');
            
            recapBtn.style.display = 'block';
        }

        function restartDemo() {
            // Hide success overlay
            const successOverlay = document.getElementById('success-overlay');
            if(successOverlay) {
                successOverlay.style.display = 'none';
                successOverlay.classList.remove('show');
            }

            // Show header/logo again
            const headerContainer = document.querySelector('.header-container');
            if(headerContainer) {
                headerContainer.style.display = 'flex';
            }

            // Hide device and show home page
            document.getElementById('device-container').classList.add('hidden');
            document.querySelector('.device-wrapper').classList.add('hidden');
            document.getElementById('home-page').classList.remove('hidden');
            
            // Hide success button
            const recapBtn = document.getElementById('recap-demo-btn');
            if(recapBtn) recapBtn.style.display = 'none';

            // Clear instruction overlay
            clearInstruction();
            
            // Hide all screens
            document.querySelectorAll('[id$="-screen"]').forEach(screen => {
                screen.style.display = 'none';
            });
            
            // Remove locked class from device
            document.getElementById('device-container').classList.remove('locked');
            
            // Reset all state variables
            selectedSensorType = '';
            guideMode = false;
            allowedButton = null;
            currentScreen = 1;
            menuIndex = 0;
            setupIndex = 0;
            mediumIndex = 0;
            extendedIndex = 0;
            selectedDigit = 0;
            distanceAFeetDigit = 0;
            distanceBFeetDigit = 0;
            hartAddressDigit = 0;
            falseSignalExists = false;
        }

        let currentScreen = 1;
        let menuIndex = 0;
        let setupIndex = 0;
        let mediumIndex = 0;
        let extendedIndex = 0;
        let vesselHeight = [0, 9, 8, 4, 2]; // Digits: 0, 9, 8, 4, 2
        let selectedDigit = 0; // Which digit position is selected (0-4)
        let distanceAFeet = [0, 0, 2, 0]; // Format: digits before decimal, decimal digit = 2.00
        let distanceAFeetDigit = 0;
        let distanceBFeet = [1, 0, 0, 0]; // Format: digits before decimal, decimal digit = 100.00 (default)
        let distanceBFeetDigit = 0;
        let falseSignalFeet = [0, 0, 0, 0]; // Format: digits before decimal, decimal digit = 000.00
        let falseSignalFeetDigit = 0;
        let falseSignalOptionIndex = 0; // 0 = Create new, 1 = Delete all
        let falseSignalExists = false; // Track if a false signal suppression has been created
        let hartAddress = [0, 0]; // HART address digits (default: 0)
        let hartAddressDigit = 0; // Which digit position is selected (0-1)
        let sensorTypeIndex = 0; // 0 = HART, 1 = MODBUS, 2 = ANALOG
        let guideMode = false; // Whether we're in guide mode
        let guideStep = 0; // Current step in the guide
        
        const menuItems = ['Setup', 'Access protection', 'Reset', 'Extended settings', 'Diagnostics', 'Setup Guide'];
        const setupItems = ['Measurement loop name', 'Distance unit', 'Type of medium', 'Application', 'Vessel height', 'Distance A (max value)', 'Distance B (min value)'];
        const mediumItems = ['Liquids', 'Bulk solid'];
        const extendedItems = ['Temperature unit', 'Damping', 'Linearization', 'Scaling', 'Display', 'False Signal Suppression', 'Date/Time', 'HART mode', 'Mode of operation', 'Copy device settings', 'Special parameters'];

        function updateMenuDisplay() {
            const menuElements = document.querySelectorAll('#menu-screen .menu-item');
            menuElements.forEach((item, index) => {
                if (index === menuIndex) {
                    item.classList.add('selected');
                    item.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                } else {
                    item.classList.remove('selected');
                }
            });
        }

        function updateSetupDisplay() {
            const setupElements = document.querySelectorAll('#setup-items .setup-item');
            setupElements.forEach((item, index) => {
                if (index === setupIndex) {
                    item.classList.add('selected');
                    item.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                } else {
                    item.classList.remove('selected');
                }
            });
        }

        function updateMediumDisplay() {
            // Update the display screen (showing current selection)
            const display = document.getElementById('medium-display');
            if (display) {
                display.textContent = mediumItems[mediumIndex];
            }
        }

        function updateMediumSelectDisplay() {
            // Update the selection screen (with checkboxes)
            const mediumElements = document.querySelectorAll('#medium-select-screen .medium-option');
            const checkboxLiquids = document.getElementById('checkbox-liquids');
            const checkboxBulkSolid = document.getElementById('checkbox-bulk-solid');
            
            mediumElements.forEach((item, index) => {
                if (index === mediumIndex) {
                    item.classList.add('selected');
                    // Add checkmark to selected checkbox
                    if (index === 0 && checkboxLiquids) {
                        checkboxLiquids.classList.add('checked');
                    } else if (index === 1 && checkboxBulkSolid) {
                        checkboxBulkSolid.classList.add('checked');
                    }
                } else {
                    item.classList.remove('selected');
                    // Remove checkmark from unselected checkbox
                    if (index === 0 && checkboxLiquids) {
                        checkboxLiquids.classList.remove('checked');
                    } else if (index === 1 && checkboxBulkSolid) {
                        checkboxBulkSolid.classList.remove('checked');
                    }
                }
            });
        }

        function updateVesselDisplay() {
            const vesselValueEl = document.getElementById('vessel-value');
            if (vesselValueEl) {
                let html = '';
                for (let i = 0; i < vesselHeight.length; i++) {
                    if (i === vesselHeight.length - 2) html += '.';
                    if (selectedDigit === i) {
                        html += `<span style="background: #000; color: #fff; padding: 2px 4px;">${vesselHeight[i]}</span>`;
                    } else {
                        html += vesselHeight[i];
                    }
                }
                html += '<span style="font-size: 20px; font-weight: normal;"> ft</span>';
                vesselValueEl.innerHTML = html;
            }
        }

        function updateVesselDisplayScreen5() {
            const display = document.getElementById('vessel-display');
            if (display) {
                // Build the full value string with decimal point
                const valueString = vesselHeight.join('').substring(0, 3) + '.' + vesselHeight.join('').substring(3);
                // Parse as float to remove leading zeros, then format to 2 decimal places
                const value = parseFloat(valueString).toFixed(2);
                display.innerHTML = value + '<span class="unit" style="font-size: 18px;"> ft</span>';
            }
        }

        function updateExtendedDisplay() {
            const extendedElements = document.querySelectorAll('#extended-items .setup-item');
            extendedElements.forEach((item, index) => {
                if (index === extendedIndex) {
                    item.classList.add('selected');
                    item.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                } else {
                    item.classList.remove('selected');
                }
            });
        }

        function updateDistanceAFeetDisplay() {
            const display = document.getElementById('distance-a-feet');
            if (display) {
                let html = '';
                for (let i = 0; i < distanceAFeet.length; i++) {
                    if (i === distanceAFeet.length - 1) html += '.';
                    if (distanceAFeetDigit === i) {
                        html += `<span style="background: #000; color: #fff; padding: 2px 4px;">${distanceAFeet[i]}</span>`;
                    } else {
                        html += distanceAFeet[i];
                    }
                }
                html += '<span style="font-size: 20px; font-weight: normal;"> ft</span>';
                display.innerHTML = html;
            }
        }

        function updateDistanceADisplay() {
            const display = document.getElementById('distance-a-display-value');
            if (display) {
                // Format: [0, 0, 2, 0] = calculate as number = "2.00"
                const val = distanceAFeet[0] * 100 + distanceAFeet[1] * 10 + distanceAFeet[2] + distanceAFeet[3] / 10;
                display.innerHTML = val.toFixed(2) + ' ft';
            }
            
            // Update the main Distance A feet display
            const feetDisplay = document.getElementById('distance-a-feet-display');
            const meterDisplay = document.getElementById('distance-a-meter-display');
            if (feetDisplay) {
                const val = distanceAFeet[0] * 100 + distanceAFeet[1] * 10 + distanceAFeet[2] + distanceAFeet[3] / 10;
                feetDisplay.innerHTML = val.toFixed(2) + '<span style="font-size: 18px; font-weight: normal;"> ft</span>';
                
                // Update meter display (1 foot = 0.3048 meters)
                if (meterDisplay) {
                    const meters = val * 0.3048;
                    meterDisplay.innerHTML = meters.toFixed(2) + ' m';
                }
            }
        }

        function updateDistanceBFeetDisplay() {
            const display = document.getElementById('distance-b-feet');
            if (display) {
                let html = '';
                for (let i = 0; i < distanceBFeet.length; i++) {
                    if (i === distanceBFeet.length - 1) html += '.';
                    if (distanceBFeetDigit === i) {
                        html += `<span style="background: #000; color: #fff; padding: 2px 4px;">${distanceBFeet[i]}</span>`;
                    } else {
                        html += distanceBFeet[i];
                    }
                }
                html += '<span style="font-size: 20px; font-weight: normal;"> ft</span>';
                display.innerHTML = html;
            }
        }

        function updateDistanceBDisplay() {
            // Update the main Distance B feet display
            const feetDisplay = document.getElementById('distance-b-feet-display');
            const meterDisplay = document.getElementById('distance-b-meter-display');
            if (feetDisplay) {
                const val = distanceBFeet[0] * 100 + distanceBFeet[1] * 10 + distanceBFeet[2] + distanceBFeet[3] / 10;
                feetDisplay.innerHTML = val.toFixed(2) + '<span style="font-size: 18px; font-weight: normal;"> ft</span>';
                
                // Update meter display (1 foot = 0.3048 meters)
                if (meterDisplay) {
                    const meters = val * 0.3048;
                    meterDisplay.innerHTML = meters.toFixed(2) + ' m';
                }
            }
        }

        function updateFalseSignalDisplay() {
            const display = document.getElementById('false-signal-value');
            if (display) {
                let html = '';
                for (let i = 0; i < falseSignalFeet.length; i++) {
                    if (i === falseSignalFeet.length - 1) html += '.';
                    if (falseSignalFeetDigit === i) {
                        html += `<span style="background: #000; color: #fff; padding: 2px 4px;">${falseSignalFeet[i]}</span>`;
                    } else {
                        html += falseSignalFeet[i];
                    }
                }
                html += '<span style="font-size: 20px; font-weight: normal;"> ft</span>';
                display.innerHTML = html;
            }
        }

        function updateFalseSignalOptionDisplay() {
            const createNewItem = document.getElementById('false-signal-create-new');
            const deleteAllItem = document.getElementById('false-signal-delete-all');
            
            // Show/hide "Delete all" based on whether a false signal exists
            if (deleteAllItem) {
                if (falseSignalExists) {
                    deleteAllItem.style.display = 'block';
                } else {
                    deleteAllItem.style.display = 'none';
                    // If "Delete all" was selected but now hidden, reset to "Create new"
                    if (falseSignalOptionIndex === 1) {
                        falseSignalOptionIndex = 0;
                    }
                }
            }
            
            // Update selected state - simple approach: index 0 is always "Create new"
            if (createNewItem) {
                if (falseSignalOptionIndex === 0) {
                    createNewItem.classList.add('selected');
                } else {
                    createNewItem.classList.remove('selected');
                }
            }
            
            if (deleteAllItem) {
                if (falseSignalOptionIndex === 1 && falseSignalExists) {
                    deleteAllItem.classList.add('selected');
                } else {
                    deleteAllItem.classList.remove('selected');
                }
            }
        }

        function updateHartDisplay() {
            // Calculate HART address value (2 digits: tens and ones)
            const hartValue = hartAddress[0] * 10 + hartAddress[1];
            
            // Update address display
            const addressDisplay = document.getElementById('hart-address-display');
            if (addressDisplay) {
                addressDisplay.textContent = hartValue.toString();
            }
            
            // Update output mode based on address
            const outputMode = document.getElementById('hart-output-mode');
            if (outputMode) {
                if (hartValue === 0) {
                    outputMode.textContent = 'Analogue current output';
                } else {
                    outputMode.textContent = 'Fixed current (4 mA)';
                }
            }
        }

        function updateHartAddressEditDisplay() {
            const display = document.getElementById('hart-address-value');
            if (display) {
                let html = '';
                for (let i = 0; i < hartAddress.length; i++) {
                    if (hartAddressDigit === i) {
                        html += `<span style="background: #000; color: #fff; padding: 2px 4px;">${hartAddress[i]}</span>`;
                    } else {
                        html += hartAddress[i];
                    }
                }
                display.innerHTML = html;
            }
        }

        function updateSensorTypeDisplay() {
            const sensorTypes = ['HART', 'MODBUS', 'ANALOG'];
            const elements = document.querySelectorAll('#sensor-type-screen .setup-item');
            elements.forEach((item, index) => {
                if (index === sensorTypeIndex) {
                    item.classList.add('selected');
                } else {
                    item.classList.remove('selected');
                }
            });
        }

        // Initialize Distance A and B displays on load
        updateDistanceADisplay();
        updateDistanceBDisplay();

        document.getElementById('ok-btn').addEventListener('click', () => {
            // Guide mode: Check if this button is allowed
            if (guideMode && allowedButton) {
                if (Array.isArray(allowedButton) && !allowedButton.includes('ok-btn')) {
                    return; // Block this action
                } else if (!Array.isArray(allowedButton) && allowedButton !== 'ok-btn') {
                    return; // Block this action
                }
            }
            
            if (guideMode && currentScreen === 1) {
                // Guide: Opening menu
                clearInstruction();
                document.getElementById('sensor-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
                currentScreen = 2;
                menuIndex = 0;
                updateMenuDisplay();
                showInstruction(
                    "Step 2: Select Setup",
                    `Setup is already selected. Press OK to continue`,
                    'ok-btn'
                );
            } else if (currentScreen === 1) {
                // Normal: Switch from sensor screen to menu screen
                document.getElementById('sensor-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
                currentScreen = 2;
                menuIndex = 0;
                updateMenuDisplay();
            } else if (guideMode && currentScreen === 2 && menuIndex === 0) {
                // Guide: Setup selected
                clearInstruction();
                document.getElementById('menu-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
                setupIndex = 0; // Start at the beginning
                updateSetupDisplay();
                showInstruction(
                    "Step 3: Navigate Setup",
                    `Use ▶ to scroll to "Type of medium", then press OK`,
                    'next-btn,ok-btn'
                );
            } else if (currentScreen === 2) {
                // Select menu item - if Setup, go to setup screen
                if (menuItems[menuIndex] === 'Setup') {
                    document.getElementById('menu-screen').style.display = 'none';
                    document.getElementById('setup-screen').style.display = 'block';
                    currentScreen = 3;
                    setupIndex = 0;
                    updateSetupDisplay();
                } else if (menuItems[menuIndex] === 'Extended settings') {
                    document.getElementById('menu-screen').style.display = 'none';
                    document.getElementById('extended-screen').style.display = 'block';
                    currentScreen = 7;
                    if (guideMode) {
                        extendedIndex = 0; // Start at the top
                    updateExtendedDisplay();
                        clearInstruction();
                        showInstruction(
                            "Step 12: Navigate Extended Settings",
                            `Use ▶ to scroll to "HART mode", then press OK`,
                            'next-btn,ok-btn'
                        );
                } else {
                        extendedIndex = 0; // Default to "Temperature unit"
                        updateExtendedDisplay();
                    }
                } else if (menuItems[menuIndex] === 'Setup Guide') {
                    document.getElementById('menu-screen').style.display = 'none';
                    document.getElementById('guide-welcome-screen').style.display = 'block';
                    currentScreen = 0;
                    guideMode = true;
                    guideStep = 0;
                } else if (!guideMode && !isDeviceLocked()) {
                    // Only allow other selections in non-guide mode and when not locked
                    alert('Selected: ' + menuItems[menuIndex]);
                }
                // In guide mode or when locked, block unhandled selections silently
            } else if (guideMode && currentScreen === 3 && setupIndex === 2) {
                // Guide: Type of medium selected
                clearInstruction();
                document.getElementById('setup-screen').style.display = 'none';
                document.getElementById('medium-screen').style.display = 'block';
                currentScreen = 4;
                mediumIndex = 1; // Default to "Bulk solid"
                updateMediumDisplay();
                showInstruction(
                    "Step 4: View Selection",
                    `Press OK to change the type of medium`,
                    'ok-btn'
                );
            } else if (guideMode && currentScreen === 3 && setupItems[setupIndex] === 'Vessel height') {
                // Guide: Vessel height selected from setup menu
                clearInstruction();
                document.getElementById('setup-screen').style.display = 'none';
                document.getElementById('vessel-screen').style.display = 'block';
                currentScreen = 5;
                updateVesselDisplayScreen5();
                showInstruction(
                    "Step 8: View Vessel Height",
                    `Press OK to edit the vessel height`,
                    'ok-btn'
                );
            } else if (currentScreen === 3) {
                // Select setup item
                if (setupItems[setupIndex] === 'Type of medium') {
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('medium-screen').style.display = 'block';
                    currentScreen = 4;
                    mediumIndex = 1; // Default to "Bulk solid"
                    updateMediumDisplay();
                } else if (setupItems[setupIndex] === 'Vessel height') {
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('vessel-screen').style.display = 'block';
                    currentScreen = 5;
                    updateVesselDisplayScreen5();
                } else if (guideMode && setupItems[setupIndex] === 'Distance A (max value)') {
                    // Guide: Distance A selected
                    clearInstruction();
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('distance-a-screen').style.display = 'block';
                    currentScreen = 8;
                    updateDistanceADisplay();
                    showInstruction(
                        "Step 12: View Distance A",
                        `This shows Distance A (max/full). Press OK to edit it`,
                        'ok-btn'
                    );
                } else if (setupItems[setupIndex] === 'Distance A (max value)') {
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('distance-a-screen').style.display = 'block';
                    currentScreen = 8;
                    updateDistanceADisplay();
                } else if (guideMode && setupItems[setupIndex] === 'Distance B (min value)') {
                    // Guide: Distance B selected
                    clearInstruction();
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('distance-b-screen').style.display = 'block';
                    currentScreen = 11;
                    updateDistanceBDisplay();
                    showInstruction(
                        "Step 15: View Distance B",
                        `This shows Distance B (min/empty). Press OK to edit it`,
                        'ok-btn'
                    );
                } else if (setupItems[setupIndex] === 'Distance B (min value)') {
                    document.getElementById('setup-screen').style.display = 'none';
                    document.getElementById('distance-b-screen').style.display = 'block';
                    currentScreen = 11;
                    updateDistanceBDisplay();
                } else if (!guideMode && !isDeviceLocked()) {
                    // Only allow other selections in non-guide mode and when not locked
                    alert('Selected: ' + setupItems[setupIndex]);
                }
                // In guide mode or when locked, block unhandled selections silently
            } else if (guideMode && currentScreen === 4) {
                // Guide: Medium selection
                clearInstruction();
                document.getElementById('medium-screen').style.display = 'none';
                document.getElementById('medium-select-screen').style.display = 'block';
                currentScreen = 19;
                updateMediumSelectDisplay();
                showInstruction(
                    "Step 5: Confirm Medium Type",
                    `Current selection shown. Press ▶ to change if needed, or press OK to confirm`,
                    'next-btn,ok-btn'
                );
            } else if (currentScreen === 4) {
                // Go to medium type selection screen
                document.getElementById('medium-screen').style.display = 'none';
                document.getElementById('medium-select-screen').style.display = 'block';
                currentScreen = 19;
                updateMediumSelectDisplay();
            } else if (guideMode && currentScreen === 19) {
                // Guide: Medium selected, now need to go back to Setup for Vessel Height
                clearInstruction();
                document.getElementById('medium-select-screen').style.display = 'none';
                document.getElementById('medium-screen').style.display = 'block';
                currentScreen = 4;
                updateMediumDisplay();
                showInstruction(
                    "Step 6: Return to Setup",
                    `Press ESC to go back to the Setup menu`,
                    'esc-btn'
                );
            } else if (currentScreen === 19) {
                // Save selection and return to display screen
                document.getElementById('medium-select-screen').style.display = 'none';
                document.getElementById('medium-screen').style.display = 'block';
                currentScreen = 4;
                updateMediumDisplay();
            } else if (currentScreen === 5) {
                // Go to edit vessel height screen
                document.getElementById('vessel-screen').style.display = 'none';
                document.getElementById('vessel-edit-screen').style.display = 'block';
                currentScreen = 6;
                selectedDigit = 0;
                updateVesselDisplay();
                if (guideMode) {
                    clearInstruction();
                    const isMobile = window.innerWidth <= 768;
                    const separator = isMobile ? '\n\n' : '\n\n━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n\n';
                    showInstruction(
                        "Step 9: Configure Vessel Height",
                        `Press ▶ to move cursor. Press + to change digit. Press OK when done${separator}📏 VESSEL HEIGHT EXPLANATION:\n\nVessel height is the FULL vessel height.\nThis ensures the sensor locks to the correct range.\n\nExample: 40 foot side wall + 10 foot cone\n= 50 foot vessel. Enter 50 feet.`,
                        'next-btn,plus-btn,ok-btn'
                    );
                }
            } else if (guideMode && currentScreen === 6) {
                // Guide: Vessel height saved -> Next step based on sensor type
                clearInstruction();
                document.getElementById('vessel-edit-screen').style.display = 'none';
                updateVesselDisplayScreen5();
                
                if (selectedSensorType === 'HART') {
                    // HART needs HART Address - need to go back to menu
                    returningForNextStep = true;
                    document.getElementById('vessel-screen').style.display = 'none';
                    showInstruction(
                        "Step 10: Return to Menu",
                        `Press ESC to return to the main menu`,
                        'esc-btn'
                    );
                    // Stay on vessel screen, wait for user to press ESC
                    document.getElementById('vessel-screen').style.display = 'block';
                    currentScreen = 5;
                } else if (selectedSensorType === 'MODBUS') {
                    // MODBUS is complete
                    document.getElementById('vessel-screen').style.display = 'none';
                    document.getElementById('sensor-screen').style.display = 'block';
                    currentScreen = 1;
                    guideMode = false;
                    showSuccess('MODBUS');
                    lockDevice();
                } else {
                    // ANALOG needs Distance A - go back to setup menu
                    document.getElementById('vessel-screen').style.display = 'none';
                    showInstruction(
                        "Step 10: Return to Setup",
                        `Press ESC to return to the Setup menu`,
                        'esc-btn'
                    );
                    // Stay on vessel screen, wait for user to press ESC
                    document.getElementById('vessel-screen').style.display = 'block';
                    currentScreen = 5;
                }
            } else if (currentScreen === 6) {
                // Save changes and return to vessel height display
                document.getElementById('vessel-edit-screen').style.display = 'none';
                document.getElementById('vessel-screen').style.display = 'block';
                currentScreen = 5;
                updateVesselDisplayScreen5();
            } else if (currentScreen === 8) {
                // Go to feet entry screen
                document.getElementById('distance-a-screen').style.display = 'none';
                document.getElementById('distance-a-feet-screen').style.display = 'block';
                currentScreen = 9;
                distanceAFeetDigit = 0;
                updateDistanceAFeetDisplay();
                if (guideMode) {
                    clearInstruction();
                    showInstruction(
                        "Step 13: Configure Distance A",
                        `Press ▶ to move cursor. Press + to change digit. Press OK when done`,
                        'next-btn,plus-btn,ok-btn'
                    );
                }
            } else if (guideMode && currentScreen === 9) {
                // Guide: Distance A saved -> let them navigate to Distance B
                clearInstruction();
                document.getElementById('distance-a-feet-screen').style.display = 'none';
                updateDistanceADisplay();
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
                setupIndex = 5; // Stay at Distance A
                updateSetupDisplay();
                showInstruction(
                    "Step 14: Navigate to Distance B",
                    `Use ▶ to scroll to "Distance B (min value)", then press OK`,
                    'next-btn,ok-btn'
                );
            } else if (currentScreen === 9) {
                // Save and return to display
                document.getElementById('distance-a-feet-screen').style.display = 'none';
                document.getElementById('distance-a-screen').style.display = 'block';
                currentScreen = 8;
                updateDistanceADisplay();
            } else if (currentScreen === 11) {
                // Go to feet entry screen
                document.getElementById('distance-b-screen').style.display = 'none';
                document.getElementById('distance-b-feet-screen').style.display = 'block';
                currentScreen = 12;
                distanceBFeetDigit = 0;
                updateDistanceBFeetDisplay();
                if (guideMode) {
                    clearInstruction();
                    showInstruction(
                        "Step 16: Configure Distance B",
                        `Press ▶ to move cursor. Press + to change digit. Press OK when done`,
                        'next-btn,plus-btn,ok-btn'
                    );
                }
            } else if (guideMode && currentScreen === 12) {
                // Guide: Distance B saved -> Complete
                clearInstruction();
                document.getElementById('distance-b-feet-screen').style.display = 'none';
                updateDistanceBDisplay();
                document.getElementById('sensor-screen').style.display = 'block';
                currentScreen = 1;
                guideMode = false;
                showSuccess('ANALOG');
                lockDevice();
            } else if (currentScreen === 12) {
                // Save and return to display
                document.getElementById('distance-b-feet-screen').style.display = 'none';
                document.getElementById('distance-b-screen').style.display = 'block';
                currentScreen = 11;
                updateDistanceBDisplay();
            } else if (currentScreen === 7) {
                // Select extended settings item
                if (extendedItems[extendedIndex] === 'False Signal Suppression') {
                    document.getElementById('extended-screen').style.display = 'none';
                    document.getElementById('false-signal-change-screen').style.display = 'block';
                    currentScreen = 13;
                } else if (extendedItems[extendedIndex] === 'HART mode') {
                    document.getElementById('extended-screen').style.display = 'none';
                    document.getElementById('hart-mode-screen').style.display = 'block';
                    currentScreen = 17;
                    updateHartDisplay();
                    if (guideMode) {
                        clearInstruction();
                        showInstruction(
                            "Step 13: View HART Address",
                            `Current HART address is shown. Press OK to edit it`,
                            'ok-btn'
                        );
                    }
                } else if (!guideMode && !isDeviceLocked()) {
                    // Only allow other selections in non-guide mode and when not locked
                    alert('Selected: ' + extendedItems[extendedIndex]);
                }
                // In guide mode or when locked, block unhandled selections silently
            } else if (currentScreen === 13) {
                // "Change now?" - Yes, proceed to option selection
                document.getElementById('false-signal-change-screen').style.display = 'none';
                document.getElementById('false-signal-option-screen').style.display = 'block';
                currentScreen = 14;
                falseSignalOptionIndex = 0; // Default to "Create new"
                updateFalseSignalOptionDisplay();
            } else if (currentScreen === 14) {
                // Option selected - either "Create new" or "Delete all"
                if (falseSignalOptionIndex === 0) {
                    // "Create new" - go to numeric input
                    document.getElementById('false-signal-option-screen').style.display = 'none';
                    document.getElementById('false-signal-input-screen').style.display = 'block';
                    currentScreen = 15;
                    falseSignalFeetDigit = 0;
                    updateFalseSignalDisplay();
                } else {
                    // "Delete all" - go directly to executing screen
                    document.getElementById('false-signal-option-screen').style.display = 'none';
                    document.getElementById('false-signal-executing-screen').style.display = 'block';
                    currentScreen = 16;
                    // Auto-return to "Change now?" screen after 2 seconds, and mark as deleted
                    setTimeout(() => {
                        falseSignalExists = false; // Mark as deleted
                        document.getElementById('false-signal-executing-screen').style.display = 'none';
                        document.getElementById('false-signal-change-screen').style.display = 'block';
                        currentScreen = 13;
                    }, 2000);
                }
            } else if (currentScreen === 15) {
                // Save and go to executing screen
                document.getElementById('false-signal-input-screen').style.display = 'none';
                document.getElementById('false-signal-executing-screen').style.display = 'block';
                currentScreen = 16;
                // Auto-return to "Change now?" screen after 2 seconds, and mark as created
                setTimeout(() => {
                    falseSignalExists = true; // Mark as created
                    document.getElementById('false-signal-executing-screen').style.display = 'none';
                    document.getElementById('false-signal-change-screen').style.display = 'block';
                    currentScreen = 13;
                }, 2000);
            } else if (currentScreen === 17) {
                // Go to edit HART address screen
                document.getElementById('hart-mode-screen').style.display = 'none';
                document.getElementById('hart-address-edit-screen').style.display = 'block';
                currentScreen = 18;
                hartAddressDigit = 0;
                updateHartAddressEditDisplay();
                if (guideMode) {
                    clearInstruction();
                    showInstruction(
                        "Step 14: Set HART Address",
                        `Address must be 1 or higher. Press ▶ to move cursor. Press + to change digit. Press OK to save`,
                        'next-btn,plus-btn,ok-btn'
                    );
                }
            } else if (guideMode && currentScreen === 18) {
                // Guide: Save HART address and complete
                const hartValue = hartAddress[0] * 10 + hartAddress[1];
                
                // Validate: HART address must be > 0
                if (hartValue === 0) {
                    clearInstruction();
                    showInstruction(
                        "⚠️ Invalid HART Address",
                        `HART address must be above 00. Use + to change digits, then press OK`,
                        'plus-btn,next-btn,ok-btn'
                    );
                    return; // Don't save, stay on edit screen
                }
                
                document.getElementById('hart-address-edit-screen').style.display = 'none';
                updateHartDisplay();
                document.getElementById('sensor-screen').style.display = 'block';
                currentScreen = 1;
                guideMode = false;
                showSuccess('HART');
                lockDevice();
            } else if (currentScreen === 18) {
                // Save and return to HART mode display
                document.getElementById('hart-address-edit-screen').style.display = 'none';
                document.getElementById('hart-mode-screen').style.display = 'block';
                currentScreen = 17;
                updateHartDisplay();
            } else if (currentScreen === 0) {
                // Welcome screen -> Sensor type selection
                document.getElementById('guide-welcome-screen').style.display = 'none';
                document.getElementById('sensor-type-screen').style.display = 'block';
                currentScreen = 20;
                updateSensorTypeDisplay();
            } else if (currentScreen === 20) {
                // Sensor type selected -> Medium info
                document.getElementById('sensor-type-screen').style.display = 'none';
                document.getElementById('guide-medium-info-screen').style.display = 'block';
                currentScreen = 21;
            } else if (currentScreen === 21) {
                // Medium info -> Medium selection
                document.getElementById('guide-medium-info-screen').style.display = 'none';
                document.getElementById('medium-select-screen').style.display = 'block';
                currentScreen = 19;
                updateMediumSelectDisplay();
            } else if (guideMode && currentScreen === 19) {
                // Medium selected -> Vessel info
                document.getElementById('medium-select-screen').style.display = 'none';
                document.getElementById('guide-vessel-info-screen').style.display = 'block';
                currentScreen = 22;
            } else if (currentScreen === 22) {
                // Vessel info -> Vessel height edit
                document.getElementById('guide-vessel-info-screen').style.display = 'none';
                document.getElementById('vessel-edit-screen').style.display = 'block';
                currentScreen = 6;
                selectedDigit = 0;
                updateVesselDisplay();
            } else if (guideMode && currentScreen === 6) {
                // Vessel height saved -> Different paths based on sensor type
                document.getElementById('vessel-edit-screen').style.display = 'none';
                updateVesselDisplayScreen5();
                if (sensorTypeIndex === 0) {
                    // HART -> HART info
                    document.getElementById('guide-hart-info-screen').style.display = 'block';
                    currentScreen = 23;
                } else if (sensorTypeIndex === 1) {
                    // MODBUS -> Complete
                    document.getElementById('guide-modbus-complete-screen').style.display = 'block';
                    currentScreen = 26;
                } else {
                    // ANALOG -> Distance A info
                    document.getElementById('guide-distance-a-info-screen').style.display = 'block';
                    currentScreen = 24;
                }
            } else if (currentScreen === 23) {
                // HART info -> HART address edit
                document.getElementById('guide-hart-info-screen').style.display = 'none';
                document.getElementById('hart-address-edit-screen').style.display = 'block';
                currentScreen = 18;
                hartAddressDigit = 0;
                updateHartAddressEditDisplay();
            } else if (guideMode && currentScreen === 18) {
                // HART address saved -> Complete
                document.getElementById('hart-address-edit-screen').style.display = 'none';
                updateHartDisplay();
                document.getElementById('guide-complete-screen').style.display = 'block';
                currentScreen = 27;
            } else if (currentScreen === 24) {
                // Distance A info -> Distance A edit
                document.getElementById('guide-distance-a-info-screen').style.display = 'none';
                document.getElementById('distance-a-feet-screen').style.display = 'block';
                currentScreen = 9;
                distanceAFeetDigit = 0;
                updateDistanceAFeetDisplay();
            } else if (guideMode && currentScreen === 9) {
                // Distance A saved -> Distance B info
                document.getElementById('distance-a-feet-screen').style.display = 'none';
                updateDistanceADisplay();
                document.getElementById('guide-distance-b-info-screen').style.display = 'block';
                currentScreen = 25;
            } else if (currentScreen === 25) {
                // Distance B info -> Distance B edit
                document.getElementById('guide-distance-b-info-screen').style.display = 'none';
                document.getElementById('distance-b-feet-screen').style.display = 'block';
                currentScreen = 12;
                distanceBFeetDigit = 0;
                updateDistanceBFeetDisplay();
            } else if (guideMode && currentScreen === 12) {
                // Distance B saved -> Complete
                document.getElementById('distance-b-feet-screen').style.display = 'none';
                updateDistanceBDisplay();
                document.getElementById('guide-complete-screen').style.display = 'block';
                currentScreen = 27;
            } else if (currentScreen === 26 || currentScreen === 27) {
                // Complete screens -> Return to sensor screen
                if (currentScreen === 26) {
                    document.getElementById('guide-modbus-complete-screen').style.display = 'none';
                } else {
                    document.getElementById('guide-complete-screen').style.display = 'none';
                }
                document.getElementById('sensor-screen').style.display = 'block';
                currentScreen = 1;
                guideMode = false;
            }
        });

        document.getElementById('next-btn').addEventListener('click', () => {
            // Guide mode: Check if this button is allowed
            if (guideMode && allowedButton) {
                if (Array.isArray(allowedButton) && !allowedButton.includes('next-btn')) {
                    return; // Block this action
                } else if (!Array.isArray(allowedButton) && allowedButton !== 'next-btn') {
                    return; // Block this action
                }
            }
            
            if (guideMode && currentScreen === 2) {
                // Guide: Scrolling menu
                menuIndex = (menuIndex + 1) % menuItems.length;
                updateMenuDisplay();
                if (menuItems[menuIndex] === 'Setup') {
                    clearInstruction();
                    showInstruction(
                        "Step 2: Select Setup",
                        `Setup is now selected. Press OK to continue`,
                        'ok-btn'
                    );
                } else if (menuItems[menuIndex] === 'Extended settings') {
                    clearInstruction();
                    showInstruction(
                        "Step 9: HART Configuration",
                        `Extended settings selected. Press OK to continue`,
                        'ok-btn'
                    );
                }
            } else if (guideMode && currentScreen === 3) {
                // Guide: Scrolling setup items
                setupIndex = (setupIndex + 1) % setupItems.length;
                updateSetupDisplay();
                if (setupItems[setupIndex] === 'Type of medium') {
                    clearInstruction();
                    showInstruction(
                        "Step 3: Select Type of Medium",
                        `Type of medium selected. Press OK to continue`,
                        'ok-btn'
                    );
                } else if (setupItems[setupIndex] === 'Vessel height') {
                    clearInstruction();
                    showInstruction(
                        "Step 8: Select Vessel Height",
                        `Vessel height selected. Press OK to continue`,
                        'ok-btn'
                    );
                } else if (setupItems[setupIndex] === 'Distance A (max value)') {
                    clearInstruction();
                    showInstruction(
                        "Step 12: Distance A",
                        `Distance A selected. Press OK to continue`,
                        'ok-btn'
                    );
                } else if (setupItems[setupIndex] === 'Distance B (min value)') {
                    clearInstruction();
                    showInstruction(
                        "Step 15: Distance B",
                        `Distance B selected. Press OK to continue`,
                        'ok-btn'
                    );
                } else {
                    // Still scrolling, keep instruction visible for navigation
                    // The user is scrolling through other items to get to their target
                }
            } else if (guideMode && currentScreen === 7) {
                // Guide: Scrolling extended settings
                extendedIndex = (extendedIndex + 1) % extendedItems.length;
                updateExtendedDisplay();
                if (extendedItems[extendedIndex] === 'HART mode') {
                    clearInstruction();
                    showInstruction(
                        "Step 12: HART Mode",
                        `HART mode selected. Press OK to continue`,
                        'ok-btn'
                    );
                }
            } else if (currentScreen === 2) {
                menuIndex = (menuIndex + 1) % menuItems.length;
                updateMenuDisplay();
            } else if (currentScreen === 3) {
                setupIndex = (setupIndex + 1) % setupItems.length;
                updateSetupDisplay();
            } else if (currentScreen === 20) {
                // Toggle sensor type
                sensorTypeIndex = (sensorTypeIndex + 1) % 3;
                updateSensorTypeDisplay();
            } else if (currentScreen === 19) {
                // Toggle between medium options on selection screen
                mediumIndex = (mediumIndex + 1) % mediumItems.length;
                updateMediumSelectDisplay();
            } else if (currentScreen === 6) {
                // Move to next digit
                selectedDigit = (selectedDigit + 1) % vesselHeight.length;
                updateVesselDisplay();
            } else if (currentScreen === 7) {
                extendedIndex = (extendedIndex + 1) % extendedItems.length;
                updateExtendedDisplay();
            } else if (currentScreen === 9) {
                // Move to next digit
                distanceAFeetDigit = (distanceAFeetDigit + 1) % distanceAFeet.length;
                updateDistanceAFeetDisplay();
            } else if (currentScreen === 12) {
                // Move to next digit
                distanceBFeetDigit = (distanceBFeetDigit + 1) % distanceBFeet.length;
                updateDistanceBFeetDisplay();
            } else if (currentScreen === 14) {
                // Toggle between "Create new" and "Delete all" (if available)
                if (falseSignalExists) {
                    // Both options available, toggle between them
                    falseSignalOptionIndex = (falseSignalOptionIndex + 1) % 2;
                } else {
                    // Only "Create new" available, stay on index 0
                    falseSignalOptionIndex = 0;
                }
                updateFalseSignalOptionDisplay();
            } else if (currentScreen === 15) {
                // Move to next digit
                falseSignalFeetDigit = (falseSignalFeetDigit + 1) % falseSignalFeet.length;
                updateFalseSignalDisplay();
            } else if (currentScreen === 18) {
                // Move to next digit
                hartAddressDigit = (hartAddressDigit + 1) % hartAddress.length;
                updateHartAddressEditDisplay();
            }
        });

        document.getElementById('plus-btn').addEventListener('click', () => {
            // Guide mode: Check if this button is allowed
            if (guideMode && allowedButton) {
                if (Array.isArray(allowedButton) && !allowedButton.includes('plus-btn')) {
                    return; // Block this action
                } else if (!Array.isArray(allowedButton) && allowedButton !== 'plus-btn') {
                    return; // Block this action
                }
            }
            
            if (currentScreen === 6) {
                // Increment selected digit 0-9
                vesselHeight[selectedDigit] = (vesselHeight[selectedDigit] + 1) % 10;
                updateVesselDisplay();
            } else if (currentScreen === 9) {
                // Increment selected digit 0-9
                distanceAFeet[distanceAFeetDigit] = (distanceAFeet[distanceAFeetDigit] + 1) % 10;
                updateDistanceAFeetDisplay();
                updateDistanceADisplay();
            } else if (currentScreen === 12) {
                // Increment selected digit 0-9
                distanceBFeet[distanceBFeetDigit] = (distanceBFeet[distanceBFeetDigit] + 1) % 10;
                updateDistanceBFeetDisplay();
                updateDistanceBDisplay();
            } else if (currentScreen === 15) {
                // Increment selected digit 0-9
                falseSignalFeet[falseSignalFeetDigit] = (falseSignalFeet[falseSignalFeetDigit] + 1) % 10;
                updateFalseSignalDisplay();
            } else if (currentScreen === 18) {
                // Increment selected digit 0-9
                hartAddress[hartAddressDigit] = (hartAddress[hartAddressDigit] + 1) % 10;
                updateHartAddressEditDisplay();
            }
        });

        document.getElementById('esc-btn').addEventListener('click', () => {
            // Guide mode: Check if this button is allowed
            if (guideMode && allowedButton) {
                if (Array.isArray(allowedButton) && !allowedButton.includes('esc-btn')) {
                    return; // Block this action
                } else if (!Array.isArray(allowedButton) && allowedButton !== 'esc-btn') {
                    return; // Block this action
                }
            }
            
            if (currentScreen === 2) {
                // Go back to sensor screen
                document.getElementById('menu-screen').style.display = 'none';
                document.getElementById('sensor-screen').style.display = 'block';
                currentScreen = 1;
            } else if (guideMode && currentScreen === 3) {
                // Guide: Go back to menu screen
                clearInstruction();
                document.getElementById('setup-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
                currentScreen = 2;
                // Check if we're in HART flow returning from vessel height
                if (returningForNextStep && selectedSensorType === 'HART') {
                    returningForNextStep = false;
                    menuIndex = 0; // Reset to top
                    updateMenuDisplay();
                    showInstruction(
                        "Step 12: Navigate to Extended Settings",
                        `Use ▶ to scroll to "Extended settings", then press OK`,
                        'next-btn,ok-btn'
                    );
                }
            } else if (currentScreen === 3) {
                // Go back to menu screen
                document.getElementById('setup-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
                currentScreen = 2;
            } else if (guideMode && currentScreen === 4) {
                // Guide: Go back to setup screen
                clearInstruction();
                document.getElementById('medium-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
                showInstruction(
                    "Step 7: Navigate to Vessel Height",
                    `Use ▶ to scroll to "Vessel height", then press OK`,
                    'next-btn,ok-btn'
                );
            } else if (currentScreen === 4) {
                // Go back to setup screen
                document.getElementById('medium-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
            } else if (currentScreen === 19) {
                // Go back to medium display screen without saving
                document.getElementById('medium-select-screen').style.display = 'none';
                document.getElementById('medium-screen').style.display = 'block';
                currentScreen = 4;
            } else if (guideMode && currentScreen === 5) {
                // Guide: Go back to setup screen from vessel height
                clearInstruction();
                document.getElementById('vessel-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
                setupIndex = 4; // Vessel height is at index 4
                updateSetupDisplay();
                if (selectedSensorType === 'HART') {
                    // HART: Need to continue to main menu, press ESC again
                    showInstruction(
                        "Step 11: Continue Back",
                        `Press ESC again to return to the main menu`,
                        'esc-btn'
                    );
                } else if (selectedSensorType === 'ANALOG') {
                    // ANALOG: Stay in setup, let them navigate to Distance A
                    showInstruction(
                        "Step 11: Navigate to Distance A",
                        `Use ▶ to scroll to "Distance A (max value)", then press OK`,
                        'next-btn,ok-btn'
                    );
                }
            } else if (currentScreen === 5) {
                // Go back to setup screen
                document.getElementById('vessel-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
                setupIndex = 4; // Vessel height is at index 4
                updateSetupDisplay();
            } else if (currentScreen === 6) {
                // Go back to vessel height display without saving
                document.getElementById('vessel-edit-screen').style.display = 'none';
                document.getElementById('vessel-screen').style.display = 'block';
                currentScreen = 5;
                updateVesselDisplayScreen5();
            } else if (currentScreen === 7) {
                // Go back to menu screen
                document.getElementById('extended-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
                currentScreen = 2;
            } else if (currentScreen === 8) {
                // Go back to setup screen
                document.getElementById('distance-a-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
            } else if (currentScreen === 9) {
                // Go back to Distance A display
                document.getElementById('distance-a-feet-screen').style.display = 'none';
                document.getElementById('distance-a-screen').style.display = 'block';
                currentScreen = 8;
            } else if (currentScreen === 11) {
                // Go back to setup screen
                document.getElementById('distance-b-screen').style.display = 'none';
                document.getElementById('setup-screen').style.display = 'block';
                currentScreen = 3;
            } else if (currentScreen === 12) {
                // Go back to Distance B display
                document.getElementById('distance-b-feet-screen').style.display = 'none';
                document.getElementById('distance-b-screen').style.display = 'block';
                currentScreen = 11;
            } else if (currentScreen === 13) {
                // Go back to extended settings
                document.getElementById('false-signal-change-screen').style.display = 'none';
                document.getElementById('extended-screen').style.display = 'block';
                currentScreen = 7;
            } else if (currentScreen === 14) {
                // Go back to "Change now?" screen
                document.getElementById('false-signal-option-screen').style.display = 'none';
                document.getElementById('false-signal-change-screen').style.display = 'block';
                currentScreen = 13;
            } else if (currentScreen === 15) {
                // Go back to "Create new" option screen
                document.getElementById('false-signal-input-screen').style.display = 'none';
                document.getElementById('false-signal-option-screen').style.display = 'block';
                currentScreen = 14;
            } else if (currentScreen === 16) {
                // Go back to extended settings (from executing screen)
                document.getElementById('false-signal-executing-screen').style.display = 'none';
                document.getElementById('extended-screen').style.display = 'block';
                currentScreen = 7;
                extendedIndex = 5; // Keep False Signal Suppression selected
                updateExtendedDisplay();
            } else if (currentScreen === 17) {
                // Go back to extended settings
                document.getElementById('hart-mode-screen').style.display = 'none';
                document.getElementById('extended-screen').style.display = 'block';
                currentScreen = 7;
                extendedIndex = 7; // Keep HART mode selected
                updateExtendedDisplay();
            } else if (currentScreen === 18) {
                // Go back to HART mode display without saving
                document.getElementById('hart-address-edit-screen').style.display = 'none';
                document.getElementById('hart-mode-screen').style.display = 'block';
                currentScreen = 17;
            }
        });

        // Recap Demo button
        document.getElementById('recap-demo-btn').addEventListener('click', () => {
            restartDemo();
        });

        // Initial state
        updateMenuDisplay();

        // PWA Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Register inline service worker
                const swCode = `
// BinDisc Emulator Service Worker
const CACHE_NAME = 'bindisc-emulator-v1';
const urlsToCache = [
    './',
    'index.html'
];

self.addEventListener('install', (event) => {
    event.waitUntil(
        caches.open(CACHE_NAME)
            .then((cache) => {
                return cache.addAll(urlsToCache);
            })
    );
});

self.addEventListener('fetch', (event) => {
    event.respondWith(
        caches.match(event.request)
            .then((response) => {
                return response || fetch(event.request);
            })
    );
});

self.addEventListener('activate', (event) => {
    event.waitUntil(
        caches.keys().then((cacheNames) => {
            return Promise.all(
                cacheNames.map((cacheName) => {
                    if (cacheName !== CACHE_NAME) {
                        return caches.delete(cacheName);
                    }
                })
            );
        })
    );
});
`;
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                
                navigator.serviceWorker.register(swUrl)
                    .then((registration) => {
                        console.log('Service Worker registered:', registration);
                    })
                    .catch((error) => {
                        console.log('Service Worker registration failed:', error);
                    });
            });
        }
    </script>
    </div> <!-- End main-content -->
</body>
</html>
